{
  "manifest_version": 3,
  "name": "Whiteboard Extension",
  "version": "1.0",
  "description": "A virtual whiteboard for drawing and sketching.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo512.png",
      "48": "logo512.png",
      "128": "logo512.png"
    }
  },
  "icons": {
    "16": "logo512.png",
    "48": "logo512.png",
    "128": "logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
